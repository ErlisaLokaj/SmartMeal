# SmartMeal Development Environment Configuration
# This file is auto-generated from .env.example with sensible defaults
# Feel free to modify these values for your local setup

# Application Settings
APP_NAME=SmartMeal
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=8000

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=smartmeal
POSTGRES_DB_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/smartmeal
DB_ECHO=False
DB_INIT_ATTEMPTS=8
DB_INIT_DELAY_SEC=2.0

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=

# MongoDB
MONGO_URI=mongodb://localhost:27017
MONGO_DB=smartmeal

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s %(levelname)s %(name)s: %(message)s

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# API Settings
API_PREFIX=
API_TITLE=SmartMeal API
API_DESCRIPTION=Intelligent meal planning system with multi-database support